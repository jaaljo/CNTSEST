@{
    ViewBag.Title = "Acceso Denegado";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}


<h2>Acceso denegado</h2>

@using (Html.BeginForm())
{

    <div class="form-horizontal well">
        <center>
            <h4>Lo sentimos @User.Identity.Name</h4><br><br>
            <h1 style="font-size: 3cm"><span class="glyphicon glyphicon-lock"></span></h1><br><br>
            <h4>Parece que no tienes acceso a esta página</h4>
            <a href="javascript:window.history.go(-1);" class="btn btn-default">Regresar</a>
        </center>
    </div>
}
